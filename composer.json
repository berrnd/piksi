{
	"require": {
		"php": ">=8.1",
		"slim/slim": "^4.11",
		"slim/psr7": "^1.6",
		"slim/http": "^1.3",
		"php-di/php-di": "^7.0",
		"berrnd/slim-blade-view": "^1.0",
		"gettext/gettext": "^4.8.8"
	},
	"autoload": {
		"psr-4": {
			"Piksi\\Services\\": "services/",
			"Piksi\\Controllers\\": "controllers/",
			"Piksi\\Middleware\\": "middleware/",
			"Piksi\\Helpers\\": "helpers/"
		},
		"files": [
			"helpers/extensions.php"
		]
	},
	"config": {
		"vendor-dir": "packages",
		"platform-check": false,
		"optimize-autoloader": true
	}
}
